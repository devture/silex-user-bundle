{% if items|length == 0 %}
	{{ "devture_user.no_items"|trans }}
{% else %}
	<table class="table table-bordered table-striped table-condensed">
		<thead>
			<tr>
				<th>{{ "devture_user.username"|trans }}</th>
				<th class="hidden-xs">{{ "devture_user.email"|trans }}</th>
				<th>{{ "devture_user.name"|trans }}</th>
			</tr>
		</thead>
		<tbody>
		{% for entity in items %}
			{% set link = path('devture_user.edit', {'id': entity.id}) %}
			<tr>
				<td>
					<a href="{{ link }}" class="btn-block">
						<strong>{{ entity.username }}</strong>
					</a>
				</td>
				<td class="hidden-xs">
					<a href="{{ link }}" class="btn-block">
						{{ entity.email }}
					</a>
				</td>
				<td>
					<a href="{{ link }}" class="btn-block">
						{{ entity.name }}
					</a>
				</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
{% endif %}
